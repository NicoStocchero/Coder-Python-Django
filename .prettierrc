{
  "printWidth": 120,
  "singleAttributePerLine": false,
  "htmlWhitespaceSensitivity": "ignore",
  "bracketSameLine": true,
  "singleQuote": true,
  "trailingComma": "none",
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "strict",
        "preserveNewlines": true,
        "printWidth": 999,
        "singleAttributePerLine": false,
        "bracketSameLine": true
      }
    }
  ],
  "ignoreFiles": ["**/templates/**/*.html"]
}
